{
  "name": "iola",
  "version": "0.2.3",
  "description": "iola - a socket client with rest api",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc && tsc-alias",
    "build:release": "rimraf dist && tsc -p tsconfig.release.json && tsc-alias -p tsconfig.release.json",
    "release": "npm run build:release && npm publish",
    "start": "ts-node ./src/main.ts",
    "test": "jest --config jest.json --runInBand",
    "test:cov": "jest --config jest.json --runInBand --coverage",
    "lib:check": "ncu",
    "lib:upgrade": "ncu -u && npm install",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "demo:iola": "terminalizer render ./demo/iola-demo.yml -o ./demo/iola-demo.gif",
    "server:ws": "node ./external/websocket.server.js",
    "server:io": "node ./external/socket.io.server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pvarentsov/iola.git"
  },
  "keywords": [
    "socket-client",
    "websocket",
    "tcp",
    "socket.io",
    "unix-socket",
    "in-progress"
  ],
  "author": "Pavel Varentsov <varentsovpavel@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pvarentsov/iola/issues"
  },
  "homepage": "https://github.com/pvarentsov/iola#readme",
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/jest": "26.0.23",
    "@types/prompts": "2.0.12",
    "@types/supertest": "2.0.11",
    "@types/ws": "7.4.4",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "cpy-cli": "3.1.1",
    "eslint": "7.27.0",
    "jest": "27.0.2",
    "jest-junit": "12.1.0",
    "jest-sonar-reporter": "2.0.0",
    "npm-check-updates": "11.5.13",
    "rimraf": "3.0.2",
    "socket.io": "4.1.3",
    "supertest": "6.1.3",
    "ts-jest": "27.0.1",
    "ts-node": "10.0.0",
    "tsc-alias": "1.3.2",
    "typedoc": "0.20.36",
    "typescript": "4.3.2"
  },
  "dependencies": {
    "@nestjs/common": "7.6.18",
    "@nestjs/core": "7.6.18",
    "@nestjs/platform-express": "7.6.18",
    "@nestjs/swagger": "4.8.2",
    "chalk": "4.1.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "commander": "7.2.0",
    "moment": "2.29.1",
    "prompts": "2.4.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.1.0",
    "socket.io-client": "4.1.3",
    "swagger-ui-express": "4.1.6",
    "ws": "7.4.6"
  }
}
