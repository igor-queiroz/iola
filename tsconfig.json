{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src"
    ],
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@iola/core/*": ["src/core/*"],
      "@iola/core": ["src/core"],
      "@iola/api/*": ["src/api/*"],
      "@iola/api": ["src/api"]
    },
    "types": [
      "reflect-metadata",
      "jest",
      "node"
    ],
    "lib": [
      "ES2020"
    ]
  },
  "include": ["./src", "./test"]
}
